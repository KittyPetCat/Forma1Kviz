<Window x:Class="Forma1Kviz.Ablak3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma1Kviz"
        mc:Ignorable="d"
        Title="Eredmény"
        Height="440"
        Width="1112"
        MinHeight="650"
        MinWidth="800"
        Background="#F2F2F2"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer Margin="0,0,0,258">
        <StackPanel Margin="32" Height="385">

            <!-- EREDMÉNY KÁRTYA -->
            <Border CornerRadius="20"
                    Background="White"
                    Padding="24"
                    Margin="0,0,0,24"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Kép -->
                        <Border Width="120"
                                Height="120"
                                Background="#EEE"
                                CornerRadius="20">
                            <TextBlock Text="🏆"
                                       FontSize="48"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Szöveg -->
                        <StackPanel Grid.Column="1"
                                    Margin="24,0,0,0">

                            <TextBlock Text="Eredményed"
                                       FontSize="26"
                                       FontWeight="Bold"/>

                            <TextBlock Text="Nagyon jó teljesítmény!"
                                       FontSize="18"
                                       Margin="0,8,0,0"/>

                            <TextBlock Text="Pontszám: 10 / 8"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Margin="0,16,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- ÚJRA -->
                    <Button Content="Újra játszom"
                            Background="#2ECC71"
                            Foreground="White"
                            Height="50"
                            Margin="0,24,0,0"
                            BorderThickness="0"
                            FontSize="18"
                            FontWeight="Bold" Width="335"/>
                </StackPanel>
            </Border>

            

        </StackPanel>
    </ScrollViewer>
</Window>