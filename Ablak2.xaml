<Window x:Class="Forma1Kviz.Ablak2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma1Kviz"
        mc:Ignorable="d"
        Title="Kérdés"
        Height="600"
        Width="900"
        Background="#F2F2F2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto" MinHeight="76.243"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- KÉP -->
        <Border Grid.Row="0"
                Background="#E0E0E0"
                CornerRadius="30" Margin="160,0,160,0">
            <Image Source="/UsZ7rBPAq2uywGRJu7YumY.jpg" Stretch="Fill"/>
        </Border>

        <!-- KÉRDÉS -->
        <TextBlock Grid.Row="1"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,1,0,38"
                   HorizontalAlignment="Center" Width="110"><Run Text="KÉRDÉS"/><Run Language="hu-hu" Text=":"/></TextBlock>

        <!-- VÁLASZOK -->
        <UniformGrid Grid.Row="2"
                     Columns="4"
                     Margin="0,20,0,26">

            <Border x:Name="___No_Name_" CornerRadius="20"
                    Background="#D3D3D3"
                    Margin="10,10,10,35">
                <StackPanel Margin="0,0,0,38">
                    <TextBlock Text="1."
                               FontSize="18"
                               FontWeight="Bold"
                               HorizontalAlignment="Right"
                               Margin="10"/>
                    <TextBlock x:Name="valasz1" Text="Válasz szöveg"
                               TextWrapping="Wrap" RenderTransformOrigin="0.508,-1.353"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="20"
                    Background="#D3D3D3"
                    Margin="10,10,10,35">
                <StackPanel>
                    <TextBlock Text="2."
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="valasz2" Text="Válasz szöveg" RenderTransformOrigin="0.477,2.304" Height="16"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="20"
                    Background="#D3D3D3"
                    Margin="10,10,10,35">
                <StackPanel>
                    <TextBlock Text="3."
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="valasz3" Text="Válasz szöveg"/>
                </StackPanel>
            </Border>

            <Border CornerRadius="20"
                    Background="#D3D3D3"
                    Margin="10,10,10,35">
                <StackPanel>
                    <TextBlock Text="4."
                               HorizontalAlignment="Right"/>
                    <TextBlock x:Name="valasz4" Text="Válasz szöveg"/>
                </StackPanel>
            </Border>

        </UniformGrid>

        <!-- ALSÓ SÁV -->
        <Grid Grid.Row="3" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="felad"
                Content="Feladom"
                    Background="#E74C3C"
                    Foreground="White"
                    Padding="20,10"
                    BorderThickness="0" Grid.Column="1" Margin="70,2,540,-2" Click="felad_Click"/>

            <TextBlock Grid.Column="1"
                       Text="10 / 1"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>

            <Button x:Name="tovabb"
                Grid.Column="1"
                    Content="Tovább"
                    Background="#2ECC71"
                    Foreground="White"
                    Padding="20,10"
                    BorderThickness="0" Margin="546,0,64,0" Click="tovabb_Click"/>
        </Grid>
        <TextBlock x:Name="kerdes" Grid.Row="1"
            FontSize="28"
            
            Margin="0,35,0,4"
            HorizontalAlignment="Center" Width="230"><Run Text="IDE JÖN A KÉRDÉS"/><Run Language="hu-hu"/></TextBlock>

    </Grid>
</Window>
