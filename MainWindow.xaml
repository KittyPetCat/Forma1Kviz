<Window x:Class="Forma1Kviz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma1Kviz"
        mc:Ignorable="d"
        Title="Forma1 Kvíz" Height="600" Width="916"
        Background="#F2F2F2">

    <ScrollViewer>
        <StackPanel Margin="16">

            <!-- KÁRTYA 1 -->
            <Border CornerRadius="16"
                    Background="White"
                    Padding="12"
                    Margin="0,0,0,16"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Kép -->
                        <Border Height="90"
                                Background="#EEE"
                                CornerRadius="12" Grid.ColumnSpan="2" Margin="5,0,674,0">
                            <Image Source="/Ferrari_F1-75_in_Melbourne.png" Stretch="UniformToFill"/>
                        </Border>

                        <!-- Szöveg -->
                        <TextBlock Grid.Column="1"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Margin="90,0,0,0" Text="Ez a kvíz nem akar kifogni rajtad… de azért ne bízd el magad. Könnyű kérdések, gyors válaszok — vajon sikerül hiba nélkül végigmenni? Mutasd meg!"/>
                    </Grid>

                    <!-- Gomb -->
                    <Button x:Name="btnKönnyű"
                        Content="Könnyű"
                            Background="#2ECC71"
                            Foreground="White"
                            Height="40"
                            Margin="0,12,0,0"
                            BorderThickness="0"
                            Cursor="Hand" Width="249" Click="Button_Click" FontWeight="Bold"/>
                </StackPanel>
            </Border>

            <!-- KÁRTYA 2 -->
            <Border CornerRadius="16"
                    Background="White"
                    Padding="12"
                    Margin="0,0,0,16">

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Height="90"
                                Background="#EEE"
                                CornerRadius="12" Grid.ColumnSpan="2" Margin="5,0,674,0">
                            <Image Source="/F1-Racing.png" Stretch="UniformToFill"/>

                        </Border>

                        <TextBlock Grid.Column="1"
                                   TextWrapping="Wrap"
                                   Margin="90,0,0,0" Text="Azt hiszed, okos vagy? Ez a kvíz nem a szerencséről szól. Csak a valódi tudás visz előre — a többi hamar elbukik. Sok sikert… szükséged lesz rá." FontSize="14"/>
                    </Grid>

                    <Button x:Name="kozepes" Content="Közepes"
                            Background="#F1C40F"
                            Foreground="Black"
                            Height="40"
                            Margin="0,12,0,0"
                            BorderThickness="0" Width="249" Click="kozepes_Click"/>
                </StackPanel>
            </Border>

            <!-- KÁRTYA 3 -->
            <Border CornerRadius="16"
                    Background="White"
                    Padding="12">

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Height="90"
                                Background="#EEE"
                                CornerRadius="12" Grid.ColumnSpan="2" Margin="5,0,674,0">
                            <Image Source="/1754480352.png" Stretch="UniformToFill">
                                <Image.Style>
                                    <Style/>
                                </Image.Style>
                            </Image>
                        </Border>

                        <TextBlock Grid.Column="1"
                                   TextWrapping="Wrap"
                                   Margin="90,0,0,0" FontSize="14" Text="Ez a kvíz a részletekről, összefüggésekről és precíz gondolkodásról szól. Minden kérdés egy újabb akadály. Vajon meddig jutsz el?"/>
                    </Grid>

                    <Button x:Name="btnNehez"
                        Content="Nehéz"
                            Background="#E74C3C"
                            Foreground="White"
                            Height="40"
                            Margin="0,12,0,0"
                            BorderThickness="0" Width="249" Click="btnNehez_Click" FontWeight="Bold"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>