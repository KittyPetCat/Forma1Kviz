<Window x:Class="Forma1Kviz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma1Kviz"
        mc:Ignorable="d"
        Title="Forma1 Kvíz" Height="600" Width="916"
        Background="#F2F2F2">

    <ScrollViewer>
        <StackPanel Margin="16">

            <!-- KÁRTYA 1 -->
            <Border CornerRadius="16"
                    Background="White"
                    Padding="12"
                    Margin="0,0,0,16"
                    BorderBrush="#DDD"
                    BorderThickness="1">

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Kép -->
                        <Border Height="90"
                                Background="#EEE"
                                CornerRadius="12" Grid.ColumnSpan="2" Margin="5,0,674,0">
                            <TextBlock Text="kép"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Szöveg -->
                        <TextBlock Grid.Column="1"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Margin="90,0,0,0"><Run Language="hu-hu" Text="Szöveg1"/><Run Text="?"/></TextBlock>
                    </Grid>

                    <!-- Gomb -->
                    <Button x:Name="konyu" Content="Könnyű"
                            Background="#2ECC71"
                            Foreground="White"
                            Height="40"
                            Margin="0,12,0,0"
                            BorderThickness="0"
                            FontWeight="Bold"
                            Cursor="Hand" Width="249" Click="konyu_Click"/>
                </StackPanel>
            </Border>

            <!-- KÁRTYA 2 -->
            <Border CornerRadius="16"
                    Background="White"
                    Padding="12"
                    Margin="0,0,0,16">

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Height="90"
                                Background="#EEE"
                                CornerRadius="12" Grid.ColumnSpan="2" Margin="5,0,674,0">
                            <TextBlock Text="kép"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Grid.Column="1"
                                   TextWrapping="Wrap"
                                   Margin="90,0,0,0"><Run Language="hu-hu" Text="Szöveg2"/></TextBlock>
                    </Grid>

                    <Button x:Name="kozepes" Content="Közepes"
                            Background="#F1C40F"
                            Foreground="Black"
                            Height="40"
                            Margin="0,12,0,0"
                            BorderThickness="0" Width="249" Click="kozepes_Click"/>
                </StackPanel>
            </Border>

            <!-- KÁRTYA 3 -->
            <Border CornerRadius="16"
                    Background="White"
                    Padding="12">

                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Height="90"
                                Background="#EEE"
                                CornerRadius="12" Grid.ColumnSpan="2" Margin="5,0,674,0">
                            <TextBlock Text="kép"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <TextBlock Grid.Column="1"
                                   TextWrapping="Wrap"
                                   Margin="90,0,0,0"><Run Language="hu-hu" Text="Szöveg3"/><LineBreak/><Run Language="hu-hu"/></TextBlock>
                    </Grid>

                    <Button x:Name="nehez" Content="Nehéz"
                            Background="#E74C3C"
                            Foreground="White"
                            Height="40"
                            Margin="0,12,0,0"
                            BorderThickness="0" Width="249" Click="nehez_Click"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>