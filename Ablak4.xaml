<Window x:Class="Forma1Kviz.Ablak4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forma1Kviz"
        mc:Ignorable="d"
        Title="Kérdés"
        Height="600"
        Width="900"
        Background="#F2F2F2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- KÉP -->
        <Border Grid.Row="0"
                Background="#E0E0E0"
                CornerRadius="30"
                Margin="160,0">
            <Image Source="/UsZ7rBPAq2uywGRJu7YumY.jpg"
                   Stretch="Fill"/>
        </Border>

        <!-- KÉRDÉS -->
        <TextBlock x:Name="QuestionText"
                   Grid.Row="1"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,30,0,20"
                   HorizontalAlignment="Center"
                   Text="IDE JÖN A KÉRDÉS"
                   TextWrapping="Wrap" TextAlignment="Center"/>

        <!-- VÁLASZOK -->
        <UniformGrid Grid.Row="2"
                     Columns="2"
                     Margin="48,20,48,26">

            <!-- VÁLASZ 1 -->
            <Border CornerRadius="20"
Background="#D3D3D3"
Margin="10"
Padding="10">
                <RadioButton x:Name="valasz1"
                         GroupName="Answers"
                         Checked="Answer_Checked">
                
                
            </RadioButton></Border>

            <!-- VÁLASZ 2 -->
            <Border CornerRadius="20"
        Background="#D3D3D3"
        Margin="10"
        Padding="10">
            <RadioButton x:Name="valasz2"
                         GroupName="Answers"
                         Checked="Answer_Checked">
                
                
            </RadioButton>
            </Border>

            <!-- VÁLASZ 3 -->
            <Border CornerRadius="20"
Background="#D3D3D3"
Margin="10"
Padding="10">
                <RadioButton x:Name="valasz3"
                         GroupName="Answers"
                         Checked="Answer_Checked">
                
                    
                
            </RadioButton></Border>

            <!-- VÁLASZ 4 -->
            
                <Border CornerRadius="20"
                        Background="#D3D3D3"
                        Margin="10"
                        Padding="10">
                    <RadioButton x:Name="valasz4"
                    GroupName="Answers"
                    Checked="Answer_Checked">
                    </RadioButton>
                </Border>
            

        </UniformGrid>

        <!-- ALSÓ SÁV -->
        <Grid Grid.Row="3" Margin="36,20,36,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- FELADÁS -->
            <Button Content="Feladás"
                    Background="#E74C3C"
                    Foreground="White"
                    Padding="20,10"
                    BorderThickness="0"
                    Click="GiveUp_Click"/>

            <!-- ÁLLÁS -->
            <TextBlock x:Name="txtProgress"
           Grid.Column="1"
           Text="1 / 10"
           FontSize="18"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"/>


            <!-- TOVÁBB -->
            <Button x:Name="NextButton"
                    Grid.Column="2"
                    Content="Tovább"
                    Background="#2ECC71"
                    Foreground="White"
                    Padding="20,10"
                    BorderThickness="0"
                    IsEnabled="False"
                    Click="NextButton_Click"/>
        </Grid>

    </Grid>
</Window>
